                <h3 class="title-big">Populer Lokasyonlar</h3>
            </div>
            <div class="row pt-5">
                @foreach (var x in Model)
                {
                    <div class="col-lg-3 col-md-4 col-6 mb-3">
                        <a href="#url">
                            <div class="box16">
                                <img class="img-fluid" src="@x.ImageUrl" style="height:180px; width:400px;" alt="">
                                <div class="box-content">
                                    <h3 class="title mb-1">@x.City</h3>
                                    <span class="post">4 ilan</span>
                                </div>
                            </div>
                        </a>
                    </div>
                }



