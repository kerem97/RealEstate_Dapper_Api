@model List<ResultEmployeeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}



<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Personel Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Görseli</th>
                                <th scope="col">Personel Adı</th>
                                <th scope="col">Personel Soyadı</th>
                                <th scope="col">Pozisyon</th>
                                <th scope="col">Mail Adresi</th>
                                <th scope="col">İletişim Bilgisi</th>
                                <th scope="col">Durumu</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@x.ImageUrl</td>
                                    <td>@x.Name</td>
                                    <td>@x.Surname</td>
                                    <td>@x.Title</td>
                                    <td>@x.Mail</td>
                                    <td>@x.PhoneNumber</td>
                                    <td>@x.Status</td>
                                    <td><a href="/Employee/DeleteEmployee/@x.EmployeeID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Employee/UpdateEmployee/@x.EmployeeID" class="btn btn-outline-warning">Güncelle</a></td>

                                </tr>
                            }
                        </tbody>

                    </table>
                    <a href="/Employee/CreateEmployee/" class="btn btn-outline-info">Yeni Personel Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>